<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <br>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label"> Title </label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
            <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">required</div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label"> Description </label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">Add Some description</div>
          </div>

          <!-- <div class="mb-3">
            <label for="image" class="form-label"> Image Link </label>
            <input name="listing[image]" placeholder="enter image URL/Link" class="form-control" type="text" />
            <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">Please Attach a Link</div>
          </div> -->

          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" class="form-control" type="file" id="image" required/>
            <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">Please upload an image</div>
          </div>
          

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label"> Price </label>
              <input name="listing[price]" placeholder="enter price"  class="form-control" required/>
              <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">Add a price</div>
            </div>

            <div class="mb-3 col-md-8">
              <label for="country" class="form-label"> Country </label>
              <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
              <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">Country name</div>
            </div>
          </div>


          <div class="mb-3">
            <label for="location" class="form-label"> Location </label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
            <div class="valid-feedback">&#9989; Looks good</div>
            <div class="invalid-feedback">Location</div>
          </div>
          <br />
          <button class="btn btn-dark add-btn">Add</button>
        </form>
        <br>
      </div>
    </div>
  </body>
  